# this is for connection to the local postgresql database only

spring.sql.init.enabled=true
spring.sql.init.platform=postgresql
# set your port and database name accordingly
spring.datasource.url=jdbc:postgresql://127.0.0.1:5432/testdb
spring.datasource.driverClassName=org.postgresql.Driver
# set your username accordingly
spring.datasource.username=postgres
# set your password accordingly
spring.datasource.password=postgres
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=none